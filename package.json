{
  "name": "whitelabel-backend-new-template",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky",
    "test": "cross-env NODE_ENV=testing jest --detectOpenHandles",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "npx tsc",
    "start:kafka": "node dist/kafka/index.js",
    "lint": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "up:dev": "sudo docker-compose --env-file .env.development -f docker-compose.dev.yml up -d --build",
    "up:prod": "sudo docker-compose --env-file .env.production -f docker-compose.prod.yml up -d --build",
    "down:dev": "sudo docker-compose --env-file .env.development -f docker-compose.dev.yml down",
    "down:prod": "sudo docker-compose --env-file .env.production -f docker-compose.prod.yml down",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate dev",
    "seed:all": "dotenv -e .env.development ts-node prisma/seeders/index.ts all",
    "seed:users": "dotenv -e .env.development ts-node prisma/seeders/index.ts users",
    "seed:categories": "dotenv -e .env.development ts-node prisma/seeders/index.ts categories",
    "seed:articles": "dotenv -e .env.development ts-node prisma/seeders/index.ts articles",
    "start:dev": "cross-env NODE_ENV=development ts-node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production ts-node dist/index.js",
    "deploy:dev": "pm2 startOrRestart ecosystem.config.js --env development --update-env",
    "deploy:prod": "pm2 startOrRestart ecosystem.config.js --env production --update-env"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "author": "yuta",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "uuid": "^11.0.4",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/kafkajs": "^1.8.2",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemon": "^1.19.6",
    "@types/redis": "^4.0.10",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
